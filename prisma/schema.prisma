// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String // Remember to hash passwords!
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Add other fields like products, orders, cart relations later
}

// Add a Product model for example
model Product {
  id          String @id @default(cuid())
  name        String
  description String?
  price       Float
  images      String[] // Array of image URLs
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}